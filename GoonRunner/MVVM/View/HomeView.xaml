<UserControl x:Class="GoonRunner.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="755">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Foreground" Color="#3c3836"/>
        <!-- <SolidColorBrush x:Key="Foreground2" Color="#A89984"/> -->
        <!-- <SolidColorBrush x:Key="Background" Color="#fbf1c7"/> -->
        <SolidColorBrush x:Key="Orange" Color="#D65D0E"/>
        <SolidColorBrush x:Key="Red" Color="#D53E3E"/>
        <SolidColorBrush x:Key="Aqua" Color="#427B55"/>
        <SolidColorBrush x:Key="Green" Color="#98971A"/>
        <SolidColorBrush x:Key="Blue" Color="#076678"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <!-- <RowDefinition Height="*"/> -->
            <!-- <RowDefinition Height="*"/> -->
        </Grid.RowDefinitions>

        <UniformGrid x:Name="TopStatsPanel"
                     Grid.Row="0"
                     Columns="4"
                     Rows="1" > 
            <GroupBox
                Style="{StaticResource GroupBoxGoonRunner}" 
                      Header="Lương" Foreground="{StaticResource Aqua}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="10" MaxWidth="30"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="10" MaxWidth="30"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="10"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Tháng này"
                               Grid.Row="1"
                               Grid.Column="1"
                               Foreground="{StaticResource Aqua}"
                               FontFamily="{StaticResource 'JetBrains Mono'}"/>
                    <TextBlock Text="30,142,000đ" 
                               Grid.Row="2"
                               Grid.Column="1"
                               Foreground="{StaticResource Aqua}" 
                               FontFamily="{StaticResource 'JetBrains Mono'}"
                               FontWeight="Bold" 
                               FontSize="32"/>
                </Grid>
            </GroupBox>
            <GroupBox Style="{StaticResource GroupBoxGoonRunner}" Header="Tình Trạng" Foreground="{StaticResource Red}">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="10"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Số sản phẩm sắp hết hàng" 
                               Grid.Row="1" 
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource Red}"  
                               FontFamily="{StaticResource 'JetBrains Mono'}"/>
                    <TextBlock Text="0" 
                               Grid.Row="2" 
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource Red}"  
                               FontFamily="{StaticResource 'JetBrains Mono'}" 
                               FontWeight="Bold" 
                               FontSize="32"/>
                </Grid>
            </GroupBox>
            <GroupBox Style="{StaticResource GroupBoxGoonRunner}" Header="Xếp Hạng" Foreground="{StaticResource Orange}">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="10"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Tháng này"
                               Grid.Row="1" Grid.Column="1" 
                               Foreground="{StaticResource Orange}" 
                               FontFamily="{StaticResource 'JetBrains Mono'}" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Tháng Trước" 
                               Grid.Row="1" Grid.Column="3" 
                               Foreground="{StaticResource Orange}" 
                               FontFamily="{StaticResource 'JetBrains Mono'}" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="1" 
                               Grid.Row="2" Grid.Column="1" 
                               Foreground="{StaticResource Orange}" 
                               FontFamily="{StaticResource 'JetBrains Mono'}" 
                               FontSize="30"
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="7" 
                               Grid.Row="2" Grid.Column="3" 
                               Foreground="{StaticResource Orange}" 
                               FontFamily="{StaticResource 'JetBrains Mono'}" 
                               FontSize="30"
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                </Grid>
            </GroupBox>
            <GroupBox Style="{StaticResource GroupBoxGoonRunner}" Header="KPI" Foreground="#98971A">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="10"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Đơn bán được" 
                               Grid.Row="1" Grid.Column="1" 
                               Foreground="{StaticResource Green}" 
                               FontFamily="{StaticResource 'JetBrains Mono'}" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Đơn cần bán"
                               Grid.Row="1" Grid.Column="3" 
                               Foreground="{StaticResource Green}" 
                               FontFamily="{StaticResource 'JetBrains Mono'}" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="50" 
                               Grid.Row="2" Grid.Column="1" 
                               FontSize="30" 
                               Foreground="{StaticResource Green}" 
                               FontFamily="{StaticResource 'JetBrains Mono'}" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="50" Grid.Row="2" Grid.Column="3" 
                               FontSize="30" 
                               Foreground="{StaticResource Green}" 
                               FontFamily="{StaticResource 'JetBrains Mono'}" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                </Grid>
            </GroupBox>
        </UniformGrid>
        <UniformGrid x:Name="Analytics"
                     Grid.Row="2"
                     Columns="2"
                     Rows="1" > 
            <GroupBox Grid.ColumnSpan="2" Style="{StaticResource GroupBoxGoonRunner}" Header="Đơn bán được trong 12 tháng">
                <Image Source="/Assets/Images/nen1.png"/>
            </GroupBox>
            <GroupBox Style="{StaticResource GroupBoxGoonRunner}" Header="Sản Phẩm Bán Chạy">
                <lvc:CartesianChart Series="{Binding SeriesCollection}">
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Labels="{Binding Labels}" Title="Sản phẩm" />
                    </lvc:CartesianChart.AxisX>
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Số lượng" />
                    </lvc:CartesianChart.AxisY>
                </lvc:CartesianChart>
            </GroupBox>




        </UniformGrid>
